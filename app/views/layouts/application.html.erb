<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantAutomationSystem</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <style>
          body {
            margin: 0;
            padding: 0;
            <% if current_employee %>
              background-image: url(/assets/nav5.jpg);
              background-repeat:no-repeat;
              background-size:cover;
            <%else%>
              background-image: url(/assets/back.jpg);
              background-repeat:no-repeat;
              background-size:cover;
            <%end%>
          }
          .button {
              background-color: #4CAF50; /* Green */
              border: none;
              color: white;
              padding: 16px 32px;
              text-align: center;
              text-decoration: none;
              display: inline-block;
              font-size: 16px;
              margin: 4px 2px;
              -webkit-transition-duration: 0.4s; /* Safari */
              transition-duration: 0.4s;
              cursor: pointer;
          }
          .button5 {
              background-color: white;
              color: black;
              border: 2px solid #555555;
              border-radius: 8px;
          }

          .button5:hover {
              background-color: #555555;
              color: white;
              box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
          }

          .nav ul {
            list-style: none;
            background-color: #444;
            padding: 0;
            margin: 0;
            overflow: hidden;

          }
          .nav li {
            font-family: 'Oswald', sans-serif;
            font-size: 1em;
            line-height: 40px;
            height: 40px;
            border-bottom: 1px solid #888;
          }

          .nav a {
            text-decoration: none;
            color: #fff;
            display: block;
            transition: .3s background-color;
          }

          .nav a:hover {
            background-color: #005f5f;
          }

          .nav a.active {
            background-color: #fff;
            color: #444;
            cursor: default;
          }

          @media screen and (min-width: 600px) {
            .nav li {
              width: 120px;
              border-bottom: none;
              height: 50px;
              line-height: 50px;
              font-size: 1.4em;
            }

            /* Option 1 - Display Inline */
            .nav li {
              display: inline-block;
              margin-right: -4px;
            }

            /* Options 2 - Float
            .nav li {
              float: left;
            }
            .nav ul {
              overflow: auto;
              width: 600px;
              margin: 0 auto;
            }
            .nav {
              background-color: #444;
            }
            */
          }
        </style>
  </head>
  <body>
    <header >
       <% if current_employee %>
       <div class="nav" >

              <% if current_employee.position.eql? "host" %>
                       <ul >
                         <li style="float:left;color: red;margin-left:40px;font-size:1.8em;"><%= current_employee.position %></li>
                         <li> <%= link_to("Check In","/hosts/checkin") %> </li>
                         <li> <%= link_to("Check Out","/hosts/checkout") %> </li>
                         <li> <%= link_to("Tables","/host") %> </li>

                         <li style="float:right;" ><%= link_to "Log out", logout_path, method: "delete" %></li>
                       </ul>
              <% elsif current_employee.position.eql? "manager" %>
                      <ul >
                        <li style="float:left;color:red;margin-left:40px;font-size:1.8em;"><%= current_employee.position %></li>

                        <li style="margin-left:70px;"> <%= link_to "Ratings",manager_draw_rates_path%> </li>
                        <li>  <%= link_to "Top Dishes",manager_top_dishes_path%> </li>
                        <li style="float:right;" ><%= link_to "Log out", logout_path, method: "delete" %></li>
                      </ul>
              <% elsif current_employee.position.eql? "waiter" %>

                      <ul >
                        <li style="float:left;color: red;margin-left:40px;font-size:1.8em;"><%= current_employee.position %></li>
                        <li><%= link_to "Deliveries",waiter_orderStatus_path%></li>
                        <li><%= link_to "New Order",waiter_tables_path%></li>
                        <li style="float:right;" ><%= link_to "Log out", logout_path, method: "delete" %></li>
                      </ul>
              <% elsif current_employee.position.eql? "cook" %>
                        <ul >
                          <li style="float:left;color: red ;margin-left:40px;font-size:1.8em;"><%= current_employee.position %></li>
                          <li style="float:right;" ><%= link_to "Log out", logout_path, method: "delete" %></li>
                        </ul>

              <%else%>
              <% end %>
            </div>

       <%else%>

       <% end %>
   </header>
<br/>
<br/>


    <%= yield %>
  </body>
</html>
