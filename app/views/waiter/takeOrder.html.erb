<div>

<h1 style="margin-left: 550px;font-size:xx-large;" >Place Order For Table: <%= @table_id %> </h1>
<div style="font-size:large;font-weight:bold;"> <%= link_to "Another Table",waiter_tables_path %> </div>

<br/>
<br/>
<form  action="/waiter/postOrders" method="post" >
<table>
  <thead>
    <tr>
      <th>choose</th>
      <th>meal</th>
      <th>description</th>
      <th>price</th>
      <th>number_times_ordered</th>
      <th>number</th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
       <td><center><input id=<%=meal.id%> type="checkbox" name=orders[<%=meal.id%>] value="1" /></center></td>
        <td><center><%= meal.name %></center></td>
        <td><center><%= meal.description %></center></td>
        <td><center><%= meal.price %></center></td>
        <td><center><%= meal.number_times_ordered %></center></td>
        <td><input  name=repitations[<%=meal.id%>] value="1" type="int"/></td>
        </tr>
    <% end %>
  </tbody>
</table>
<br/>
<input type="hidden" value=<%= @table_id %> name="table_id"/>
  <input type="submit" , style = "margin-left:550px;
                                  border: none;
                                  color: white;
                                  padding: 16px 32px;
                                  text-align: center;
                                  text-decoration: none;
                                  display: inline-block;
                                  font-size: 16px;
                                  -webkit-transition-duration: 0.4s; /* Safari */
                                  transition-duration: 0.4s;
                                  cursor: pointer;
                                  background-color: white;
                                  color: black;
                                  border: 2px solid #555555;
                                  border-radius: 8px;">

</form>

</div>
